{{!< default}}

<section class="gh-container is-list gh-outer">
    <div class="gh-container-inner gh-inner">
        
        <h2 class="gh-container-title">
            All Posts
        </h2>

        <main class="gh-main">
            <div class="gh-feed">
                {{#get "posts" include="authors" limit="all"}}
                    {{#foreach posts}}
                        {{> "post-card" lazyLoad=true}}
                    {{/foreach}}
                {{/get}}
            </div>
        </main>

    </div>
</section>